<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/playDialogLayout"
              android:background="@color/backgroundColor"
              android:layout_width="275dp" android:layout_height="125dp"
              android:orientation="vertical" android:weightSum="1">

    <LinearLayout
            android:background="@color/backgroundColor"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/playDialogTextView"
                android:textSize="10pt"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="225dp" android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/exitPlayDialogButton"
                android:background="@drawable/exit_play_button"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="25dp" android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/playButtons"
        android:background="@color/backgroundColor"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

        <Button
                android:id="@+id/seekBackButton"
                android:background="@drawable/reverse_button"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="26dp"
                android:layout_width="30dp" android:layout_height="30dp"/>
        <Button
                android:id="@+id/pausePlayButton"
                android:background="@drawable/play_button"
                android:layout_width="30dp" android:layout_height="30dp"/>
        <Button
                android:id="@+id/seekForwardButton"
                android:background="@drawable/fast_forward_button"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="26dp"
                android:layout_width="30dp" android:layout_height="30dp"/>
        </LinearLayout>
    <SeekBar
            android:id="@+id/playSeekBar"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>