<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:background="@color/backgroundColor" android:columnCount="2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button
                        android:id="@+id/newProjectButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start a New Project"
                        android:background="@drawable/button_drawable"
                        android:layout_gravity="top|center"
                        android:layout_marginBottom="50dp"
                        android:width="250dp"
                        android:height="70dp"
                        android:onClick="startProject"/>
                <Button
                        android:id="@+id/openProjectButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open a Project"
                        android:background="@drawable/button_drawable"
                        android:layout_gravity="top|center"
                        android:layout_marginBottom="50dp"
                        android:width="250dp"
                        android:height="70dp"
                        android:onClick="openProject"/>
                <Button
                        android:id="@+id/aboutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About SongFriend"
                        android:background="@drawable/button_drawable"
                        android:layout_gravity="top|center"
                        android:width="250dp"
                        android:height="70dp"
                        android:onClick="openAboutPage"
                        android:layout_row="2" android:layout_column="0"/>
        </LinearLayout>
</RelativeLayout>