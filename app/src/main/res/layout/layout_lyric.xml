<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/backgroundColor"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/corkboard_background"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp" android:layout_height="200dp">
        <LinearLayout
                android:orientation="horizontal"
                android:background="#161616"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Sections"
                    android:layout_marginRight="145dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/addLyricSectionButton"
                    android:background="@drawable/add_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp" android:layout_height="20dp"/>
        </LinearLayout>
        <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
                android:id="@+id/lyricSectionDragView"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
            android:cursorVisible="true"
            android:background="@drawable/lyric_edittext_box"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Enter lyrics here..."
            android:textColorHint="#656565"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="10dp"
            android:layout_width="300dp" android:layout_height="match_parent"/>
</LinearLayout>